{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "strict": true,
        "module": "ES2022",
        "target": "ES2020",
        "lib": [
            "ES2023"
        ],
        "moduleResolution": "Bundler",
        // "checkJs": true,
        // "allowJs": true,
        "jsx": "react-jsx",
        "jsxImportSource": "ags/gtk4",
        "paths": {
            "gi://*": [
                "./@types/*"
            ],
            "astal": [
                "/usr/share/astal/gjs/astal",
                "./node_modules/astal"
            ],
            "astal/*": [
                "./node_modules/astal/*",
                "/usr/share/astal/gjs/*"
            ]
        }
    }
}
